<%= form_for(@contact) do |f| %>
 <%= f.error_messages! %>
  <%= notice %>

  <div class="field">
    <%= f.label :名前 %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :メールアドレス %><br>
    <%= f.text_field :email, class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :内容 %><br>
    <%= f.text_field :content, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit "送信", class: "btn btn-primary btn-block" %>
  </div>
<% end %>
