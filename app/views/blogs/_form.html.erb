<%= form_for(@blog, url: choose_new_or_edit) do |f| %>
  <%= f.error_messages! %>
  <%= f.label :タイトル %>
  <%= f.text_field :title, class: 'form-control' %>
  <br>
  <%= f.label :内容 %>
  <%= f.text_area :content, class: 'form-control' %>
  <br>
  <%= f.label :画像 %>
  <%= f.file_field :pic_url %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-primary btn-block' %>
<% end %>